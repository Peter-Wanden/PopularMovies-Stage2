<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Toolbar" tools:keep="@style/Toolbar"/>

    <style name="Toolbar.Action" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:minWidth">@dimen/toolbar_icon_min_size</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">8dp</item>
        <item name="android:padding">@dimen/normal_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Label">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="Text.Value">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>
</resources>